{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "paths": {
        "@/*": ["src/*"],
        "components/*": ["src/components/*"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "skipLibCheck": true
  },
  // "paths": {
  //   "Components": ["src/components/*"],
  // },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}